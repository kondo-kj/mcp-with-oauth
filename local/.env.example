# ========================================
# MCP Client Configuration
# ========================================
# Port number of the MCP server to connect to (default: 8001)
MCP_SERVER_PORT=8001

# Use Dynamic Client Registration (default: false)
# - false: Use pre-registered client credentials (recommended for this demo)
# - true: Register client dynamically at runtime (RFC 7591)
MCP_USE_DCR=false

# ========================================
# MCP Authorization Server Configuration
# ========================================
# Server port (default: 9000)
MCP_AUTH_PORT=9000

# ========================================
# MCP Resource Server Configuration
# ========================================
# Server port (default: 8001)
MCP_RESOURCE_PORT=8001

# Authorization Server URL (default: http://localhost:9000)
MCP_RESOURCE_AUTH_SERVER_URL=http://localhost:9000

# Transport protocol: sse or streamable-http (default: streamable-http)
MCP_RESOURCE_TRANSPORT=streamable-http

# Enable RFC 8707 resource validation (default: false)
MCP_RESOURCE_OAUTH_STRICT=false
