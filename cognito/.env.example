# ========================================
# AWS Configuration
# ========================================
# Optional: AWS region for all services (default: us-west-2)
AWS_DEFAULT_REGION=us-west-2

# ========================================
# Cognito Configuration (Required)
# ========================================
# Run setup_cognito.py first to create User Pool and Client
# Then copy the output values here

# Cognito User Pool ID (e.g., us-west-2_XXXXXXXXX)
# Note: Region is automatically extracted from User Pool ID
COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX

# Cognito App Client ID
COGNITO_APP_CLIENT_ID=your_client_id_here

# Cognito App Client Secret
COGNITO_APP_CLIENT_SECRET=your_client_secret_here

# Cognito Domain (e.g., your-domain.auth.us-west-2.amazoncognito.com)
COGNITO_DOMAIN=your-domain.auth.us-west-2.amazoncognito.com

# ========================================
# MCP Client Configuration (Required)
# ========================================
# MCP server URL to connect to (default: http://localhost:8001/mcp)
MCP_SERVER_URL=http://localhost:8001/mcp

# Use Dynamic Client Registration (default: false)
# For Cognito, this should be false
MCP_USE_DCR=false

# ========================================
# MCP Resource Server Configuration
# ========================================
# Server port (default: 8001)
MCP_RESOURCE_PORT=8001

# Transport protocol: sse or streamable-http (default: streamable-http)
MCP_RESOURCE_TRANSPORT=streamable-http

# RFC 8707 Resource Indicator (optional, default: auto-generated from server_url)
# MCP_RESOURCE_EXPECTED_RESOURCE=http://localhost:8001/mcp
